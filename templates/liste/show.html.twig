
{% extends 'base.html.twig' %}

{% block title %}Liste index{% endblock %}

{% block content %}
<div >
    <div class="card">
        <div class="card-header card-header-warning">
            <h4 class="card-title">Liste</h4>
            <div class="profile-header" style="background-color: teal">
                <a style="color: inherit;" href="{{ path('liste_edit', {'id': liste.id}) }}">
                    <i class="material-icons" style="color: white; background-color: black; border-radius: 50%; padding: 15px; position: absolute; right: 35px; top: 25px">edit</i>
                </a>
            </div>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-hover" class="table table-bordered table-hover">

                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ liste.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ liste.titre }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ liste.contenu ? liste.contenu|join(', ') : '' }}</td>
                </tr>
                </tbody>
            </table>

            <a class="demo-google-material-icon" href="{{ path('liste_index') }}">
                <i style="cursor: pointer;" class="material-icons"> keyboard_backspace</i>
            </a>


            {{ include('liste/_delete_form.html.twig') }}
        </div>
    </div>

</div>

    {% endblock %}
