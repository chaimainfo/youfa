{% extends 'base.html.twig' %}
{% block content %}
    <div class="col-lg-6 col-md-12">
        <div class="card">
            <div class="card-header card-header-warning">
                <h4 class="card-title">Edit Composant</h4>
                <!--<p class="card-category">New employees on 15th September, 2016</p>-->
            </div>
            <div class="card-body table-responsive">
                {{ form_start(form) }}
                {{ form_row(form.nom,{'label':'Nom :  '}) }}
                {# {{ form_row(form.contenu,{'label':'Contenu :  '}) }}#}
                {#{{ form_row(form.enabled,{'label':'Enabled :  '}) }}#}
                {{ form_row(form.typesTab,{'label':'Tableau(x) :  '}) }}
                <label> Type: </label><br>
                <input type="radio" name="type" value="text">Text<br>
                <input type="radio" name="type" value="number">Nombre<br>
                <input type="radio" name="type" value="oui/non">Oui/Non<br>
                <input type="radio" name="type" value="email">Email<br>
                <input type="radio" name="type" value="telephone">Telephone<br>
                <input type="radio" name="type" value="liste">Liste<br>

                <button class="btnnn">{{ button_label|default('enregistrer modification') }}</button>
                {{ form_end(form) }}


                <a class="demo-google-material-icon" href="{{ path('composant_index') }}">
                    <i style="cursor: pointer;" class="material-icons"> keyboard_backspace</i>
                </a>

            </div>
        </div>
    </div>

{% endblock %}